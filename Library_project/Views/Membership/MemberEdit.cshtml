@model Library_project.DataModel.Member

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Member Index";
}


<form asp-action="MemberEdit" asp-controller="Membership">

    <input name="MemberId" asp-for="MemberId" id="MemberId" type="hidden" />

    <div class="card-body">
        <div class="form-group">
            <label >Member Name</label>
            <input type="text" class="form-control"  asp-for="MemberName"  placeholder="Name">
        </div>
        <div class="form-group">
            <label>Member Email</label>
            <input type="email" class="form-control" asp-for="MemberEmail" placeholder="Email">
        </div> 
        <div class="form-group">
            <label>Member Phone</label>
            <input type="tel" class="form-control"  asp-for="MemberPhone" placeholder="Phone">
        </div> 
        <div class="form-group">
            <label>Member Type </label>
          
            <select asp-for="MemberType" placeholder="Member Type">
                <option>Silver</option>
                <option>Golden</option>
                <option>Diamond</option>
            </select>
        </div> 
        <div class="form-group">
            <label>Member Address </label>
            <input type="text" class="form-control" asp-for="MemberAddress" placeholder="Member Address">
        </div> 
        
        <div class="form-check">
            <input type="checkbox" class="form-check-input"  asp-for="IsActive"  >
            <label >Check me out</label>
        </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

